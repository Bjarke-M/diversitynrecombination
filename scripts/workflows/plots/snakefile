        expand('/home/bjarkemp/primatediversity/people/bjarkemp/diversitynrecombination/figures/initial_plots/{ref_assembly}/10kb/{ref_assembly}_{window_size}_combined.pdf',ref_assembly=species_list, window_size=windowlist)

rule initial_plots:
    input:
        input = '/home/bjarkemp/primatediversity/people/bjarkemp/diversitynrecombination/results/combined/{ref_assembly}/{ref_assembly}_{window_size}_combined.csv'
